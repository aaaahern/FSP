<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" media="screen">
    <script src="/javascripts/jquery-2.1.4.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Financial Risk Management</a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li class="active dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Daily Change
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="active"><a href="">By Ticker</a></li>
              <li><a href="/byQuality">By Quality</a></li>
            </ul>
          </li>
          <li class="btn-link"><a href="/riskByMaturity">Risk by Maturity</a></li>
          <li class="btn-link"><a href="/varChart">Historical P&L Chart</a></li>



        </ul>
      </div>
    </nav>

    <!-- Content -->
    <h1><%= title %></h1>
    <table class="table table-bordered table-striped">
      <thead>
        <td></td>
        <td colspan="3" class="info text-center"><strong>Opening Book</strong></td>
        <td colspan="3" class="warning text-center"><strong>Closing Book</strong></td>
        <td colspan="3" class="success text-center"><strong>Change</strong></td>
      </thead>

      <thead>
        <td class="text-center"><strong>Ticker</strong></td>
        <td class="text-center"><strong>Amount</strong></td><td class="text-center"><strong>Risk</strong></td><td class="text-center"><strong>LGD</strong></td>
        <td class="text-center"><strong>Amount</strong></td><td class="text-center"><strong>Risk</strong></td><td class="text-center"><strong>LGD</strong></td>
        <td class="text-center"><strong>Amount</strong></td><td class="text-center"><strong>Risk</strong></td><td class="text-center"><strong>LGD</strong></td>
      </thead>

        <% for(var i=0; i<content.length; i++) { %>
        <tr>
          <td>
            <%= content[i]["ticker"] %>
          </td>
          <td>
            <%= content[i]["openAmount"] %>
          </td>
          <td>
            <%= content[i]["openRisk"] %>
          </td>
          <td>
            <%= content[i]["openLGD"] %>
          </td>
          <td>
            <%= content[i]["closeAmount"] %>
          </td>
          <td>
            <%= content[i]["closeRisk"] %>
          </td>
          <td>
            <%= content[i]["closeLGD"] %>
          </td>
          <td>
            <%= content[i]["changeAmount"] %>
          </td>
          <td>
            <%= content[i]["changeRisk"] %>
          </td>
          <td>
            <%= content[i]["changeLGD"] %>
          </td>
        </tr>
        <% } %>

    </table>

  </body>
</html>
